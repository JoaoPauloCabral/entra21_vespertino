package acao;


import beans.Produtos;
import dados.Array;


public class Acao {

	public void cadastrar(Produtos c) {
		Array.array1.add(c);
		
	}
	
	int arroz1=0, maca1=0;
	
	public  int arroz (boolean j) {
		
		if(j == true) {
			arroz1++;
		}else if((j == false) && (arroz1 > 0)) {
			arroz1--;
		}
		
		return arroz1;
	}
	
	
	
	public int somar() {
		
		int soma = arroz1+maca1;
		
		return soma;
	}
	

}
